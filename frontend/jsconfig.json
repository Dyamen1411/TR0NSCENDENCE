{
	"compilerOptions": {
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@scripts/*": [
				"./src/scripts/*"
			],
			"@assets/*": [
				"./assets/*"
			],
			"@utils/*": [
				"./src/utils/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
